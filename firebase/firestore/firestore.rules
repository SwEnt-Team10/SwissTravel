rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow create: if request.auth != null &&
    	request.auth.uid == request.resource.data.uid;

  		allow get, list: if request.auth != null;

  		// Allow updating own profile
  		allow update: if request.auth != null &&
    		request.auth.uid == resource.data.uid;

  		// Allow other users to update ONLY the "friends" field to send/receive friend requests
  		allow update: if request.auth != null &&
    		request.resource.data.diff(resource.data).changedKeys().hasOnly(["friends"]);
    }
    match /trips/{uid} {
      allow create: if request.auth != null &&
      	request.auth.uid == request.resource.data.ownerId;

      allow update, delete: if true;

      allow get, list : if request.auth != null;
    }
    match /images/{uid} {
    	allow create: if request.auth != null &&
      	request.auth.uid == request.resource.data.ownerId;

    	allow update, delete: if request.auth != null &&
      	request.auth.uid == resource.data.ownerId;

      allow get, list :
      	if request.auth != null;
    }
    match /durationCache/{entryId} {
      allow read, delete: if request.auth != null;
        allow create, write: if request.auth != null &&
               isValidCacheEntry(request.resource.data);

      // Helper function to validate the document format
      function isValidCacheEntry(data) {
        return data.keys().hasAll([
                  "startLat",
                  "startLng",
                  "endLat",
                  "endLng",
                  "duration",
                  "transportMode",
                  "lastUpdateTimestamp"
               ])
            && data.startLat is number
            && data.startLng is number
            && data.endLat is number
            && data.endLng is number
            && data.duration is number
            && data.transportMode is string
            && data.lastUpdateTimestamp is number;
      }
    }
  }
}